<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  	<ul>
	  <li>
	    <a href="#" class="spotify"><span>Home</span><i class="fa fa-home"></i></a>
	  </li>
	  <li>
	    <a href="#portfolio" class="soundcloud"><span>Projects</span><i class="fa fa-code"></i></a>
	  </li>
	  <li>
	    <a href="#contact" class="skype"><span>Contact</span><i class="fa fa-envelope"></i></a>
	  </li>
	</ul>

	<div class="container flash-container">
      <% flash.each do |type, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{type}" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
